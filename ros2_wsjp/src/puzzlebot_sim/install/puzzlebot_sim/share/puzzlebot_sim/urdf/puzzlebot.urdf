<robot name="puzzlebot">

  <!-- base_link -->
  <link name="base_link">
    <!-- podrías agregarle también visual -->
  </link>

  <!-- rueda derecha -->
  <link name="wheel_r">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://puzzlebot_sim/meshes/Puzzlebot_Wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://puzzlebot_sim/meshes/Puzzlebot_Wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia 
        ixx="0.0001" ixy="0.0"  ixz="0.0"
        iyy="0.0001" iyz="0.0"
        izz="0.0001"/>
    </inertial>
  </link>

  <!-- joint que conecta rueda derecha -->
  <joint name="base_link_to_wheel_r" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_r"/>
    <origin xyz="0.052 0.095 -0.0025" rpy="0 0 0"/>
  </joint>

</robot>
